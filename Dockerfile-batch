FROM openjdk:17-jdk-slim

# 작업 디렉터리 설정
WORKDIR /app

# 소스 코드 복사
COPY . .

# Gradle 실행 권한 부여
RUN chmod +x ./gradlew

# Gradle 빌드: 루트 프로젝트와 서브모듈을 함께 빌드
RUN ./gradlew build -x test --no-daemon

# 환경변수 파일 복사 (application.properties 포함)
RUN cp src/main/resources/application.properties /app/application.properties

# 배치 모듈 JAR 파일 복사 (빌드 후 생성된 JAR 파일을 컨테이너 내로 복사)
RUN cp module-batch/build/libs/*.jar /app/app.jar

# wait-for-it.sh 스크립트에 실행 권한 부여
RUN chmod +x /wait-for-it.sh

# RDS 엔드포인트 환경변수 설정
ENV RDS_ENDPOINT=${RDS_ENDPOINT}

# DB 서비스가 시작될 때까지 대기 후 애플리케이션 실행
ENTRYPOINT ["/wait-for-it.sh", "db-mysql.cf0es2youlrz.us-east-1.rds.amazonaws.com:3306", "--", "java", "-Dspring.config.location=file:/app/application.properties", "-jar", "/app/app.jar"]
